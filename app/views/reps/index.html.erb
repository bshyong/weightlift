<h1>Listing reps</h1>

<table>
  <tr>
    <th>Count</th>
    <th>Weight</th>
    <th>Lift</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reps.each do |rep| %>
  <tr>
    <td><%= rep.count %></td>
    <td><%= rep.weight %></td>
    <td><%= Lift.find(rep.lift_id).name %></td>
    <td><%= link_to 'Show', rep %></td>
    <td><%= link_to 'Edit', edit_rep_path(rep) %></td>
    <td><%= link_to 'Destroy', rep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

